<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:PhoneMirror.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="760" d:DesignHeight="460"
        x:Class="PhoneMirror.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="Phone Mirror"
        Width="760"
        Height="460"
        MinWidth="640"
        MinHeight="380"
        CanResize="True"
        Background="{DynamicResource ApplicationPageBackgroundThemeBrush}">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid ColumnDefinitions="2.2*,1.4*">
        <!-- LEFT: Status + logs -->
        <Border Grid.Column="0"
                Margin="24,24,16,24"
                Padding="16"
                Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                CornerRadius="8">
            <TextBlock Text="Left panel placeholder"
                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
        </Border>

        <!-- RIGHT: Controls -->
        <Border Grid.Column="1"
                Margin="0,24,24,24"
                Padding="16"
                Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                CornerRadius="8">
            <TextBlock Text="Right panel placeholder"
                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
        </Border>
    </Grid>

</Window>
