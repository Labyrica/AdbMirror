<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:PhoneMirror.ViewModels"
        xmlns:converters="using:PhoneMirror.Converters"
        xmlns:core="using:PhoneMirror.Core.Services"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="760" d:DesignHeight="460"
        x:Class="PhoneMirror.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="Phone Mirror"
        Width="760"
        Height="460"
        MinWidth="640"
        MinHeight="380"
        CanResize="True"
        Background="{DynamicResource ApplicationPageBackgroundThemeBrush}">

    <Window.Resources>
        <converters:LogLevelToBrushConverter x:Key="LogLevelToBrushConverter"/>
    </Window.Resources>

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid ColumnDefinitions="2.2*,1.4*">
        <!-- LEFT: Status + logs -->
        <Border Grid.Column="0"
                Margin="24,24,16,24"
                Padding="16"
                Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                CornerRadius="8">
            <Grid RowDefinitions="Auto,Auto,Auto,8,*">
                <!-- Header -->
                <DockPanel Grid.Row="0" LastChildFill="False" Margin="0,0,0,12">
                    <StackPanel Orientation="Vertical" DockPanel.Dock="Left" VerticalAlignment="Top">
                        <TextBlock Text="Phone Mirror"
                                   FontSize="20"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                        <TextBlock Text="Live ADB mirroring"
                                   FontSize="11"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                    </StackPanel>
                </DockPanel>

                <!-- Status line -->
                <StackPanel Grid.Row="1"
                            Orientation="Horizontal"
                            Margin="0,0,0,4">
                    <TextBlock Text="STATUS"
                               FontSize="10"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                               Margin="0,0,8,0"
                               VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding StatusText}"
                               FontSize="12"
                               Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                               MaxWidth="360"
                               TextTrimming="CharacterEllipsis"/>
                </StackPanel>

                <!-- ADB path info -->
                <StackPanel Grid.Row="2"
                            Orientation="Horizontal"
                            Margin="0,0,0,4">
                    <TextBlock Text="ADB"
                               FontSize="10"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                               Margin="0,0,8,0"
                               VerticalAlignment="Top"/>
                    <TextBlock Text="{Binding AdbPathText}"
                               FontSize="10"
                               Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                               TextWrapping="Wrap"
                               MaxWidth="380"/>
                </StackPanel>

                <!-- Log panel header with toggle -->
                <Border Grid.Row="4"
                        Margin="0,4,0,0"
                        Padding="8,6"
                        Background="{DynamicResource CardBackgroundFillColorSecondaryBrush}"
                        CornerRadius="4,4,0,0"
                        IsVisible="{Binding !IsLogPanelExpanded}">
                    <Button Command="{Binding ToggleLogPanelCommand}"
                            Background="Transparent"
                            BorderThickness="0"
                            Padding="0"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Left"
                            Cursor="Hand">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE70E;"
                                       FontFamily="{StaticResource SymbolThemeFontFamily}"
                                       FontSize="10"
                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                       Margin="0,0,6,0"
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="EVENT LOG"
                                       FontSize="10"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding LogEntryCountText}"
                                       FontSize="10"
                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                       Margin="6,0,0,0"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Border>

                <!-- Log panel expanded content -->
                <Border Grid.Row="4"
                        Margin="0,4,0,0"
                        Padding="8"
                        Background="{DynamicResource CardBackgroundFillColorSecondaryBrush}"
                        CornerRadius="4"
                        IsVisible="{Binding IsLogPanelExpanded}"
                        MaxHeight="200">
                    <Grid RowDefinitions="Auto,*">
                        <!-- Header with toggle and action buttons -->
                        <DockPanel Grid.Row="0" LastChildFill="False" Margin="0,0,0,8">
                            <Button DockPanel.Dock="Left"
                                    Command="{Binding ToggleLogPanelCommand}"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Padding="0"
                                    Cursor="Hand">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE70D;"
                                               FontFamily="{StaticResource SymbolThemeFontFamily}"
                                               FontSize="10"
                                               Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                               Margin="0,0,6,0"
                                               VerticalAlignment="Center"/>
                                    <TextBlock Text="EVENT LOG"
                                               FontSize="10"
                                               FontWeight="SemiBold"
                                               Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                               VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding LogEntryCountText}"
                                               FontSize="10"
                                               Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                               Margin="6,0,0,0"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>

                            <!-- Action buttons -->
                            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" Spacing="4">
                                <Button Command="{Binding CopyLogsCommand}"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Padding="4"
                                        ToolTip.Tip="Copy logs to clipboard">
                                    <TextBlock Text="&#xE8C8;"
                                               FontFamily="{StaticResource SymbolThemeFontFamily}"
                                               FontSize="12"
                                               Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                                </Button>
                                <Button Command="{Binding ClearLogsCommand}"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Padding="4"
                                        ToolTip.Tip="Clear logs">
                                    <TextBlock Text="&#xE74D;"
                                               FontFamily="{StaticResource SymbolThemeFontFamily}"
                                               FontSize="12"
                                               Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                                </Button>
                            </StackPanel>
                        </DockPanel>

                        <!-- Log entries list -->
                        <ScrollViewer Grid.Row="1"
                                      HorizontalScrollBarVisibility="Auto"
                                      VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding LogEntries}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate x:DataType="core:LogcatEntry">
                                        <StackPanel Orientation="Horizontal" Margin="0,1">
                                            <TextBlock Text="{Binding Timestamp, StringFormat={}{0:HH:mm:ss.fff}}"
                                                       FontSize="10"
                                                       FontFamily="Consolas"
                                                       Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                                       Margin="0,0,8,0"
                                                       VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding Level}"
                                                       FontSize="10"
                                                       FontFamily="Consolas"
                                                       FontWeight="Bold"
                                                       Foreground="{Binding Level, Converter={StaticResource LogLevelToBrushConverter}}"
                                                       Margin="0,0,8,0"
                                                       VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding Tag}"
                                                       FontSize="10"
                                                       FontFamily="Consolas"
                                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                       Margin="0,0,8,0"
                                                       VerticalAlignment="Center"
                                                       MaxWidth="100"
                                                       TextTrimming="CharacterEllipsis"/>
                                            <TextBlock Text="{Binding Message}"
                                                       FontSize="10"
                                                       FontFamily="Consolas"
                                                       Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                       VerticalAlignment="Center"
                                                       TextWrapping="NoWrap"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- RIGHT: Controls -->
        <Border Grid.Column="1"
                Margin="0,24,24,24"
                Padding="16"
                Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                CornerRadius="8">
            <Grid RowDefinitions="Auto,Auto,Auto,*,Auto">
                <!-- Device summary -->
                <StackPanel Grid.Row="0"
                            Orientation="Vertical"
                            Margin="0,0,0,16">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                        <TextBlock Text="&#xE8EA;"
                                   FontFamily="{StaticResource SymbolThemeFontFamily}"
                                   FontSize="16"
                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                   Margin="0,0,8,0"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="DEVICE"
                                   FontSize="10"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                    <TextBlock Text="{Binding DeviceDisplayName}"
                               FontSize="12"
                               Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                               TextTrimming="CharacterEllipsis"/>
                </StackPanel>

                <!-- Mirror button - hero element -->
                <Button Grid.Row="1"
                        Height="56"
                        Margin="0,0,0,8"
                        Padding="12,0"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Center"
                        Command="{Binding MirrorCommand}"
                        IsEnabled="{Binding IsPrimaryEnabled}"
                        Classes="accent">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="&#xE768;"
                                   FontFamily="{StaticResource SymbolThemeFontFamily}"
                                   FontSize="16"
                                   Margin="0,0,8,0"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding PrimaryButtonText}"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <!-- Screenshot button - secondary action -->
                <Button Grid.Row="2"
                        Height="36"
                        Margin="0,0,0,16"
                        Padding="12,0"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Center"
                        Command="{Binding ScreenshotCommand}"
                        ToolTip.Tip="Capture screenshot to temp folder">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="&#xE722;"
                                   FontFamily="{StaticResource SymbolThemeFontFamily}"
                                   FontSize="14"
                                   Margin="0,0,6,0"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="Screenshot"
                                   FontSize="13"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <!-- Settings section -->
                <StackPanel Grid.Row="3"
                            Orientation="Vertical">
                    <TextBlock Text="SETTINGS"
                               FontSize="10"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                               Margin="0,0,0,12"/>

                    <!-- Quality preset selector -->
                    <StackPanel Orientation="Vertical" Margin="0,0,0,12">
                        <TextBlock Text="QUALITY PRESET"
                                   FontSize="10"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                   Margin="0,0,0,6"/>
                        <ComboBox ItemsSource="{Binding Presets}"
                                  SelectedItem="{Binding SelectedPreset}"
                                  Width="160"
                                  HorizontalAlignment="Left"/>
                    </StackPanel>

                    <!-- Options checkboxes -->
                    <StackPanel Orientation="Vertical" Margin="0,4,0,0" Spacing="8">
                        <CheckBox Content="Auto mirror when device connects"
                                  IsChecked="{Binding AutoMirrorOnConnect}"
                                  FontSize="12"/>
                        <CheckBox Content="Start scrcpy in fullscreen"
                                  IsChecked="{Binding StartFullscreen}"
                                  FontSize="12"/>
                        <CheckBox Content="Keep screen awake"
                                  IsChecked="{Binding KeepScreenAwake}"
                                  FontSize="12"/>
                    </StackPanel>
                </StackPanel>

                <!-- Credits footer -->
                <StackPanel Grid.Row="4"
                            Margin="0,16,0,0"
                            HorizontalAlignment="Right"
                            Orientation="Horizontal"
                            VerticalAlignment="Bottom">
                    <StackPanel Orientation="Vertical"
                                VerticalAlignment="Center">
                        <TextBlock Text="Built by Labyrica"
                                   FontSize="10"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                        <TextBlock Text="labyrica.com"
                                   FontSize="10"
                                   Foreground="{DynamicResource TextFillColorTertiaryBrush}"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>

</Window>
