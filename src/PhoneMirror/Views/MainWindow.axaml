<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:PhoneMirror.ViewModels"
        xmlns:converters="using:PhoneMirror.Converters"
        xmlns:core="using:PhoneMirror.Core.Services"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="520"
        x:Class="PhoneMirror.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="Phone Mirror"
        Width="800"
        Height="520"
        MinWidth="720"
        MinHeight="480"
        CanResize="True"
        Background="{StaticResource LabyricaBackgroundBrush}">

    <Window.Resources>
        <converters:LogLevelToBrushConverter x:Key="LogLevelToBrushConverter"/>
    </Window.Resources>

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <!-- Main container with proper padding -->
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header with logo and title -->
        <DockPanel Grid.Row="0" Margin="0,0,0,20">
            <Image Source="/Assets/labyrica-logo.png"
                   Height="20"
                   DockPanel.Dock="Left"
                   VerticalAlignment="Center"
                   Opacity="0.8"/>
            <TextBlock Text="PHONE MIRROR"
                       FontSize="20"
                       FontWeight="SemiBold"
                       Foreground="{StaticResource LabyricaTextPrimaryBrush}"
                       LetterSpacing="3"
                       Margin="16,0,0,0"
                       VerticalAlignment="Center"/>
            <TextBlock Text="labyrica.com"
                       FontSize="11"
                       Foreground="{StaticResource LabyricaTextSecondaryBrush}"
                       DockPanel.Dock="Right"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center"/>
        </DockPanel>

        <!-- Main content area -->
        <Grid Grid.Row="1" ColumnDefinitions="1.6*,24,1*">

            <!-- LEFT PANEL: Status + Logs -->
            <Border Grid.Column="0"
                    Padding="20"
                    Background="{StaticResource LabyricaSurfaceBrush}"
                    BorderBrush="{StaticResource LabyricaBorderPrimaryBrush}"
                    BorderThickness="1"
                    CornerRadius="{StaticResource LabyricaCornerRadius}">
                <Grid RowDefinitions="Auto,16,Auto,16,*">

                    <!-- Status Section -->
                    <StackPanel Grid.Row="0" Orientation="Vertical">
                        <Border Background="#19FFFFFF" Padding="8,4" CornerRadius="2" HorizontalAlignment="Left" Margin="0,0,0,8">
                            <TextBlock Text="STATUS"
                                       FontSize="10"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource LabyricaTextAccentBrush}"
                                       LetterSpacing="1"/>
                        </Border>
                        <TextBlock Text="{Binding StatusText}"
                                   FontSize="13"
                                   Foreground="{StaticResource LabyricaTextPrimaryBrush}"
                                   TextWrapping="Wrap"/>
                    </StackPanel>

                    <!-- ADB Info Section -->
                    <StackPanel Grid.Row="2" Orientation="Vertical">
                        <Border Background="#19FFFFFF" Padding="8,4" CornerRadius="2" HorizontalAlignment="Left" Margin="0,0,0,8">
                            <TextBlock Text="ADB PATH"
                                       FontSize="10"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource LabyricaTextAccentBrush}"
                                       LetterSpacing="1"/>
                        </Border>
                        <TextBlock Text="{Binding AdbPathText}"
                                   FontSize="11"
                                   Foreground="{StaticResource LabyricaTextSecondaryBrush}"
                                   TextWrapping="Wrap"/>
                    </StackPanel>

                    <!-- Log Panel -->
                    <Border Grid.Row="4"
                            Background="{StaticResource LabyricaBackgroundBrush}"
                            BorderBrush="{StaticResource LabyricaBorderPrimaryBrush}"
                            BorderThickness="1"
                            CornerRadius="{StaticResource LabyricaCornerRadiusSm}"
                            Padding="12">
                        <Grid RowDefinitions="Auto,8,*">
                            <!-- Log Header -->
                            <DockPanel Grid.Row="0" LastChildFill="False">
                                <StackPanel DockPanel.Dock="Left" Orientation="Horizontal">
                                    <Button Command="{Binding ToggleLogPanelCommand}"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Padding="0"
                                            Cursor="Hand">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding IsLogPanelExpanded, Converter={x:Static converters:BoolConverters.ToChevron}}"
                                                       FontFamily="{StaticResource SymbolThemeFontFamily}"
                                                       FontSize="10"
                                                       Foreground="{StaticResource LabyricaTextSecondaryBrush}"
                                                       Margin="0,0,6,0"
                                                       VerticalAlignment="Center"/>
                                            <TextBlock Text="EVENT LOG"
                                                       FontSize="10"
                                                       FontWeight="SemiBold"
                                                       Foreground="{StaticResource LabyricaTextAccentBrush}"
                                                       VerticalAlignment="Center"
                                                       LetterSpacing="1"/>
                                        </StackPanel>
                                    </Button>
                                    <TextBlock Text="{Binding LogEntryCountText}"
                                               FontSize="10"
                                               Foreground="{StaticResource LabyricaTextSecondaryBrush}"
                                               Margin="8,0,0,0"
                                               VerticalAlignment="Center"/>
                                </StackPanel>

                                <!-- Action buttons -->
                                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" Spacing="4">
                                    <Button Command="{Binding CopyLogsCommand}"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Padding="6"
                                            ToolTip.Tip="Copy logs">
                                        <TextBlock Text="&#xE8C8;"
                                                   FontFamily="{StaticResource SymbolThemeFontFamily}"
                                                   FontSize="12"
                                                   Foreground="{StaticResource LabyricaTextSecondaryBrush}"/>
                                    </Button>
                                    <Button Command="{Binding ClearLogsCommand}"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Padding="6"
                                            ToolTip.Tip="Clear logs">
                                        <TextBlock Text="&#xE74D;"
                                                   FontFamily="{StaticResource SymbolThemeFontFamily}"
                                                   FontSize="12"
                                                   Foreground="{StaticResource LabyricaTextSecondaryBrush}"/>
                                    </Button>
                                </StackPanel>
                            </DockPanel>

                            <!-- Log entries -->
                            <ScrollViewer Grid.Row="2"
                                          IsVisible="{Binding IsLogPanelExpanded}"
                                          HorizontalScrollBarVisibility="Auto"
                                          VerticalScrollBarVisibility="Auto">
                                <ItemsControl ItemsSource="{Binding LogEntries}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate x:DataType="core:LogcatEntry">
                                            <StackPanel Orientation="Horizontal" Margin="0,2">
                                                <TextBlock Text="{Binding Timestamp, StringFormat={}{0:HH:mm:ss}}"
                                                           FontSize="10"
                                                           FontFamily="Consolas"
                                                           Foreground="{StaticResource LabyricaTextAccentBrush}"
                                                           Margin="0,0,8,0"/>
                                                <TextBlock Text="{Binding Level}"
                                                           FontSize="10"
                                                           FontFamily="Consolas"
                                                           FontWeight="Bold"
                                                           Foreground="{Binding Level, Converter={StaticResource LogLevelToBrushConverter}}"
                                                           Margin="0,0,8,0"
                                                           Width="16"/>
                                                <TextBlock Text="{Binding Message}"
                                                           FontSize="10"
                                                           FontFamily="Consolas"
                                                           Foreground="{StaticResource LabyricaTextPrimaryBrush}"
                                                           TextWrapping="NoWrap"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Grid>
                    </Border>
                </Grid>
            </Border>

            <!-- RIGHT PANEL: Controls -->
            <Border Grid.Column="2"
                    Padding="20"
                    Background="{StaticResource LabyricaSurfaceBrush}"
                    BorderBrush="{StaticResource LabyricaBorderPrimaryBrush}"
                    BorderThickness="1"
                    CornerRadius="{StaticResource LabyricaCornerRadius}">
                <Grid RowDefinitions="Auto,20,Auto,12,Auto,24,Auto,*">

                    <!-- Device Info -->
                    <StackPanel Grid.Row="0" Orientation="Vertical">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="&#xE8EA;"
                                       FontFamily="{StaticResource SymbolThemeFontFamily}"
                                       FontSize="14"
                                       Foreground="{StaticResource LabyricaTextPrimaryBrush}"
                                       Margin="0,0,8,0"
                                       VerticalAlignment="Center"/>
                            <Border Background="#19FFFFFF" Padding="8,4" CornerRadius="2">
                                <TextBlock Text="DEVICE"
                                           FontSize="10"
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource LabyricaTextAccentBrush}"
                                           LetterSpacing="1"/>
                            </Border>
                        </StackPanel>
                        <TextBlock Text="{Binding DeviceDisplayName}"
                                   FontSize="12"
                                   Foreground="{StaticResource LabyricaTextPrimaryBrush}"
                                   TextTrimming="CharacterEllipsis"/>
                    </StackPanel>

                    <!-- Primary Action: Mirror Button -->
                    <Button Grid.Row="2"
                            Height="52"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Center"
                            Command="{Binding MirrorCommand}"
                            IsEnabled="{Binding IsPrimaryEnabled}"
                            Classes="labyrica-primary">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="&#xE768;"
                                       FontFamily="{StaticResource SymbolThemeFontFamily}"
                                       FontSize="16"
                                       Margin="0,0,10,0"
                                       VerticalAlignment="Center"
                                       Foreground="Black"/>
                            <TextBlock Text="{Binding PrimaryButtonText}"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"
                                       Foreground="Black"
                                       LetterSpacing="1"/>
                        </StackPanel>
                    </Button>

                    <!-- Secondary Action: Screenshot -->
                    <Button Grid.Row="4"
                            Height="36"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Center"
                            Command="{Binding ScreenshotCommand}"
                            ToolTip.Tip="Capture screenshot"
                            Classes="labyrica-secondary">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="&#xE722;"
                                       FontFamily="{StaticResource SymbolThemeFontFamily}"
                                       FontSize="12"
                                       Margin="0,0,6,0"
                                       VerticalAlignment="Center"
                                       Foreground="{StaticResource LabyricaTextPrimaryBrush}"/>
                            <TextBlock Text="SCREENSHOT"
                                       FontSize="11"
                                       VerticalAlignment="Center"
                                       Foreground="{StaticResource LabyricaTextPrimaryBrush}"
                                       LetterSpacing="1"/>
                        </StackPanel>
                    </Button>

                    <!-- Settings Section -->
                    <StackPanel Grid.Row="6" Orientation="Vertical">
                        <Border Background="#19FFFFFF" Padding="8,4" CornerRadius="2" HorizontalAlignment="Left" Margin="0,0,0,12">
                            <TextBlock Text="SETTINGS"
                                       FontSize="10"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource LabyricaTextAccentBrush}"
                                       LetterSpacing="1"/>
                        </Border>

                        <!-- Quality Preset -->
                        <TextBlock Text="QUALITY"
                                   FontSize="10"
                                   Foreground="{StaticResource LabyricaTextSecondaryBrush}"
                                   Margin="0,0,0,6"
                                   LetterSpacing="0.5"/>
                        <ComboBox ItemsSource="{Binding Presets}"
                                  SelectedItem="{Binding SelectedPreset}"
                                  HorizontalAlignment="Stretch"
                                  Margin="0,0,0,16"/>

                        <!-- Options -->
                        <StackPanel Orientation="Vertical" Spacing="10">
                            <CheckBox Content="Auto mirror on connect"
                                      IsChecked="{Binding AutoMirrorOnConnect}"
                                      FontSize="12"
                                      Foreground="{StaticResource LabyricaTextPrimaryBrush}"/>
                            <CheckBox Content="Start fullscreen"
                                      IsChecked="{Binding StartFullscreen}"
                                      FontSize="12"
                                      Foreground="{StaticResource LabyricaTextPrimaryBrush}"/>
                            <CheckBox Content="Keep screen awake"
                                      IsChecked="{Binding KeepScreenAwake}"
                                      FontSize="12"
                                      Foreground="{StaticResource LabyricaTextPrimaryBrush}"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>

</Window>
