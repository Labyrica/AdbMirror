<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:PhoneMirror.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="56" d:DesignHeight="180"
        x:Class="PhoneMirror.Views.FloatingToolbar"
        x:DataType="vm:FloatingToolbarViewModel"
        Title="Toolbar"
        Width="56"
        Height="180"
        CanResize="False"
        SystemDecorations="None"
        Topmost="True"
        ShowInTaskbar="False"
        Background="Transparent">

    <Design.DataContext>
        <vm:FloatingToolbarViewModel/>
    </Design.DataContext>

    <!-- Labyrica-styled vertical toolbar -->
    <Border Background="#F0111111"
            CornerRadius="3"
            Padding="8"
            BorderBrush="#222222"
            BorderThickness="1">
        <Grid RowDefinitions="Auto,*,Auto">

            <!-- Drag handle / branding -->
            <Border Grid.Row="0"
                    Background="#19FFFFFF"
                    CornerRadius="2"
                    Padding="4,2"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,12">
                <TextBlock Text="PM"
                           FontSize="9"
                           FontWeight="Bold"
                           Foreground="#999999"
                           LetterSpacing="1"/>
            </Border>

            <!-- Action buttons -->
            <StackPanel Grid.Row="1"
                        Orientation="Vertical"
                        HorizontalAlignment="Center"
                        Spacing="8">

                <!-- Screenshot button -->
                <Button Command="{Binding ScreenshotCommand}"
                        ToolTip.Tip="Screenshot to clipboard"
                        Width="40"
                        Height="40"
                        Padding="0"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Background="White"
                        Foreground="Black"
                        CornerRadius="3">
                    <TextBlock Text="&#xE722;"
                               FontFamily="{StaticResource SymbolThemeFontFamily}"
                               FontSize="16"
                               Foreground="Black"/>
                </Button>

                <!-- Copy errors button -->
                <Button Command="{Binding CopyErrorsCommand}"
                        ToolTip.Tip="Copy recent errors"
                        Width="40"
                        Height="40"
                        Padding="0"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Background="Transparent"
                        BorderBrush="#333333"
                        BorderThickness="1"
                        CornerRadius="3">
                    <TextBlock Text="&#xE7BA;"
                               FontFamily="{StaticResource SymbolThemeFontFamily}"
                               FontSize="16"
                               Foreground="White"/>
                </Button>

                <!-- Record button (placeholder for future) -->
                <Button ToolTip.Tip="Record (coming soon)"
                        Width="40"
                        Height="40"
                        Padding="0"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Background="Transparent"
                        BorderBrush="#333333"
                        BorderThickness="1"
                        CornerRadius="3"
                        IsEnabled="False"
                        Opacity="0.5">
                    <TextBlock Text="&#xE7C8;"
                               FontFamily="{StaticResource SymbolThemeFontFamily}"
                               FontSize="16"
                               Foreground="White"/>
                </Button>
            </StackPanel>

            <!-- Status message at bottom -->
            <TextBlock Grid.Row="2"
                       Text="{Binding StatusMessage}"
                       FontSize="9"
                       Foreground="#40F99B"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"
                       Margin="0,12,0,0"
                       MaxWidth="48"
                       TextWrapping="Wrap"
                       MaxHeight="32"
                       TextTrimming="CharacterEllipsis"/>
        </Grid>
    </Border>

</Window>
